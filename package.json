{
  "name": "brightscript-parser",
  "version": "1.1.0",
  "description": "A parser for Roku's BrightScript language, written in JavaScript",
  "main": "dist/BrightScriptLexer.js",
  "types": "dist/BrightScriptLexer.d.ts",
  "scripts": {
    "compile": "rimraf dist && tsc",
    "prepublishOnly": "npm run compile",
    "test": "nyc mocha src/**/*.spec.ts --full-trace",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TwitchBronBron/brightscript-parser.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TwitchBronBron/brightscript-parser/issues"
  },
  "homepage": "https://github.com/TwitchBronBron/brightscript-parser#readme",
  "nyc": {
    "include": [
      "src/**/!(*.spec).ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "benchmark": "^2.1.4",
    "chai": "^4.2.0",
    "coveralls": "^3.0.0",
    "glob-all": "^3.1.0",
    "mocha": "^5.2.0",
    "nyc": "^13.3.0",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-origin-ordered-imports-rule": "^1.1.2",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "fs-extra": "^7.0.1"
  }
}
